{
  "name": "Always on Image and Video Remover",
  "version": "1.0",
  "description": "If the extension is turned on, you will find no images or videos on the pages you view.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "css": ["pageConcealer.css"],
      "js": ["pageConcealer.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["removeMedia.js"],
      "all_frames": true
    }
  ],
  "manifest_version": 2
}
